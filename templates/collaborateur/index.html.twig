{% extends 'base.html.twig' %}

{% block title %}Liste des Collaborateur{% endblock %}

{% block javascripts %}        
    <script src="{{ asset('assets/js/searchBar.js') }}"></script>
{% endblock %}

{% block body %}
    <div class='text-center mb-2'>	
        <div class='h2 mb-3 font-weight-bold'>Liste des collaborateurs</div>
    </div>
    <div class='text-center mb-2'>	
        <a href='{{ path('new_collaborateur') }}'><input type='button' value="Ajouter une fiche collaborateur" class='grey-btn f-20 py-2 px-4' /></a>
    </div>

    <hr>

    <input class='w-100 mb-3 p-2' type="text" id="searchBar" placeholder="Rechercher un collaborateur">

    <div class='container list'>
        <div class="row tab-head p-2">
            <div class="col-3">Nom</div>
            <div class="col-3">Prénom</div>
            <div class="col-2">Heures/Jour</div>
            <div class="col-2">Heures/Semaine</div>
            <div class="col-2">Jours/Semaine</div>
        </div>

        {% for collaborateur in collaborateurs %}
            <a class='data-row' href="{{ path('show_collaborateur', {'id': collaborateur.id}) }}">
                <div class="row link default p-2">
                    <div class="col-3 my-auto">{{ collaborateur.nom }}</div>
                    <div class="col-3 my-auto">{{ collaborateur.prenom }}</div>
                    <div class="col-2 my-auto">{{ collaborateur.HrJour }}</div>
                    <div class="col-2 my-auto">{{ collaborateur.HrSemaine }}</div>
                    <div class="col-2 my-auto">{{ collaborateur.JourSemaine }}</div>
                </div>
            </a>
        {% else %}
            <div class="row">
                <div class='col text-center alert-label p-2'>Aucun collaborateur enregistrés</div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}