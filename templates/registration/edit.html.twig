{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Cr√©er un compte</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                
                <div class="form-group">
                    {{ form_row(registrationForm.username, {'label': "Nom d'utilisateur", 'attr': {'class': 'form-control mb-3'}}) }}
                </div>
                {{ form_errors(registrationForm.username) }}
                
                <div class="form-group">
                    {{ form_row(registrationForm.password.first, {'label': 'Mot de passe', 'attr': {'class': 'form-control mb-3'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_row(registrationForm.password.second, {'label': 'Confirmer le mot de passe', 'attr': {'class': 'form-control mb-3'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}


