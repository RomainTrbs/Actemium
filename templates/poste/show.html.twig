{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <style>
        th,
        td {
            text-align: center;
            vertical-align: middle !important;
            font-size: 0.8rem;
        }

        .small-cell {
            max-width: 11px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Ajout de styles spécifiques à cette page */
        .container-background {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
        }

        .show-container {
            margin-top: 30px;
        }
    </style>
{% endblock %}

{% block title %}{{ poste.nom }} - Détails du Poste{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="text-center">	
        <h2 align="center">Gestion du Poste</h2>
        <a class="btn btn-secondary f-20 px-4 py-2" href="{{ path('edit_poste', {'id': poste.id}) }}">Modifier</a>
        {{ include('poste/_delete_form.html.twig') }}
    </div>
    <hr>
        <div class="card">
            <div class="card-header">
                <h2 class="font-weight-bold mb-0">{{ poste.nom }}</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nom du poste :</dt>
                    <dd class="col-sm-9">{{ poste.nom }}</dd>

                    <dt class="col-sm-3">Collaborateurs à ce poste :</dt>
                    <dd class="col-sm-9">
                        {% if collaborateurs is not empty %}
                            <ul>
                                {% for collaborateur in collaborateurs %}
                                    <li>{{ collaborateur.nom }} {{ collaborateur.prenom }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            Aucun collaborateurs n'a ce poste.
                        {% endif %}
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
{% endblock %}
