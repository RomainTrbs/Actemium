{{ form_start(form) }}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .custom-border {
            border: 2px solid #1d5294;
            padding: 2px;
            border-color: #bed73e #1d5294 #1d5294 #bed73e;
        }
    </style>
    <title>Your Form Title</title>
</head>

<body>

    <div class="container p-4 form container-background">
        <div class="container custom-border">
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <div class="row mb-3">
                        <div class="col">
                            <h5>Nom du Poste</h5>
                            {{ form_errors(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-3 mr-3'}}) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <button class="btn btn-success py-2 px-4 mt-3">{{ button_label|default('Valider') }}</button>
                </div>

            </div>
        </div>
    </div>
    <br>


</body>

</html>
{{ form_end(form) }}
