<form method="post" action="{{ path('delete_affaire', {'id': affaire.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette affaire ?');" class='d-inline'>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affaire.id) }}">
    <button class="red-btn f-20 px-4 py-2">Supprimer</button>
</form>